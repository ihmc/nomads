<xs:schema xmlns="commands.asset.core.th.dod.mil"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
    targetNamespace="commands.asset.core.th.dod.mil"
    xmlns:spatial="http://th.dod.mil/core/types/spatial" 
    elementFormDefault="qualified" jaxb:version="2.1">
    <xs:import namespace="http://th.dod.mil/core/types/spatial" 
        schemaLocation="../../types/spatial/SpatialTypes.xsd" />
    <xs:include schemaLocation="BaseTypes.xsd"></xs:include>

    <xs:element name="getPanTiltResponse" type="GetPanTiltResponse" />
    <xs:complexType name="GetPanTiltResponse">
        <xs:annotation>
            <xs:documentation>GetPanTiltResponse is use to retrieve the current orientation (pan/tilt) of an asset.
            </xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="Response">
                <xs:sequence>
                    <xs:element name="panTilt" type="spatial:OrientationOffset" minOccurs="1" maxOccurs="1"  >
                        <xs:annotation>
                            <xs:documentation>
                                The current orientation relative to the platform. The orientation offset structure 
                                contains Azimuth (pan), Elevation (tilt), and Bank (roll).  All fields are optional, 
                                therefore not all field values may be present.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
</xs:schema>